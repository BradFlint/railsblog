<h1>Users#edit</h1>

<div align="center" id="editgreet">
	<h1>Need to edit your account information?</h1>
</div>

<div id="editform">
	<%= form_for @user, html: {method: :put} do |f| %>
		<%= f.label :fname, "First Name"%>
		<%= f.text_field :fname%>
		<br>
		<%= f.label :lname, "Last Name"%>
		<%= f.text_field :lname %>
		<br>
		<%= f.label :username, "User Name"%>
		<%= f.text_field :username %>
		<br>
		<%= f.label :email, "Email"%>
		<%= f.text_field :email %>
		<br>
		<%= f.label :password, "Password"%>
		<%= f.text_field :password %>
		<br>
		<br>
		<%= f.submit%>
	<% end %>
</div>
