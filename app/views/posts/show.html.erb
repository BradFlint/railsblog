<div id="post_content"
	
	<p>Find me in app/views/posts/show.html.erb</p>
<!-- title, body and date of post  -->
	<h1 class="title">
		<%= @post.title %>
	</h1>

	<h3 class="body">
		<%= @post.body %>
	</h3>
<!-- edit and delete links. alert to confirm the user wants to delete post -->
	<p class="date">
		Submitted <%= time_ago_in_words(@post.created_at) %> Ago
		| <%= link_to 'Edit', edit_post_path(@post) %> 
		| <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
	</p>
<!-- displays the number of comments and displays them -->
	<div id="comments">
		<h2><%= @post.comments.count %> Comments</h2>
		<%= render @post.comments %>
<!-- form to create and submit a comment -->
		<h3>Add a comment:</h3>
		<%= form_for @comment do |f| %>
			<%= hidden_field_tag "post_id", @post.id %>
			<p>
				<%= f.label :Comment %><br>
				<%= f.text_field :body %>
			</p>
			<p>
				<%= f.submit %>
			</p>
		<% end %>
	</div>
</div>
